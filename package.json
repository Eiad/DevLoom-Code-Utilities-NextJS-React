{
  "name": "devloom",
  "version": "0.3.1",
  "description": "A development tool by Devloom",
  "author": "Devloom",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3011",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "lint": "next lint",
    "electron-start": "electron .",
    "react-start": "react-scripts start",
    "electron-dev": "concurrently \"BROWSER=none npm run react-start\" \"wait-on https://devloom.net && electron .\"",
    "electron-pack": "electron-builder"
  },
  "build": {
    "appId": "com.devloom.app",
    "files": [
      "out/**/*",
      "index.js",
      "package.json"
    ],
    "icon": "public/logo/devloom-app-logo.png",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "pkg"
      ],
      "identity": "Mohamed Ashraf (LJK4SGP7TG)"
    },
    "win": {
      "target": [
        "msi"
      ]
    }
  },
  "dependencies": {
    "@vercel/analytics": "^1.1.1",
    "cors": "^2.8.5",
    "dompurify": "^3.0.6",
    "electron-serve": "^1.1.0",
    "firebase": "^10.5.2",
    "firebase-admin": "^11.11.0",
    "js-yaml": "^4.1.0",
    "lorem-ipsum": "^2.0.8",
    "next": "^14.0.0",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.0.3",
    "prismjs": "^1.29.0",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^9.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@electron/osx-sign": "^1.0.5",
    "@types/crypto-js": "^4.1.3",
    "concurrently": "^8.2.2",
    "electron": "^27.0.4",
    "electron-builder": "^24.6.4",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.1",
    "wait-on": "^7.1.0"
  }
}

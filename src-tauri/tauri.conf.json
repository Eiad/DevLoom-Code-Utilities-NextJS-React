{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DevLoom",
  "version": "0.3.1",
  "identifier": "com.devloom.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3011",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "DevLoom",
        "width": 1400,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "macOS": {
      "signingIdentity": "Mohamed Ashraf (LJK4SGP7TG)"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

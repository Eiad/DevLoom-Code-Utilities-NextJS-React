{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DevLoom",
  "version": "0.3.1",
  "identifier": "com.devloom.app",
  "build": {
    "frontendDist": "../out",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "DevLoom",
        "width": 1400,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "macOS": {
      "minimumSystemVersion": "12.0",
      "entitlements": "Entitlements.appstore.plist",
      "signingIdentity": "3rd Party Mac Developer Application: Mohamed Ashraf (LJK4SGP7TG)",
      "files": {
        "embedded.provisionprofile": "embedded.provisionprofile"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
